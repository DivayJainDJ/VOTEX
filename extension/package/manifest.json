{
  "manifest_version": 3,
  "name": "Live Text Enhancement Extension",
  "version": "1.0.0",
  "description": "Real-time speech-to-text with grammar correction for Google Meet and Zoom",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "optional_permissions": [
    "microphone"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Live Text Enhancement"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "bridge.js",
        "realtime-stt-bridge.js",
        "text-enhancement-bridge.js"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*"
      ]
    }
  ]
}